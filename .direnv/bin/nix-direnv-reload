#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/insipx/Projects/xmtp/workspace-diesel-wasm-sqlite/main" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/insipx/Projects/xmtp/workspace-diesel-wasm-sqlite/main")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/insipx/Projects/xmtp/workspace-diesel-wasm-sqlite/main" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/insipx/Projects/xmtp/workspace-diesel-wasm-sqlite/main/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/insipx/Projects/xmtp/workspace-diesel-wasm-sqlite/main/.envrc" "/Users/insipx/Projects/xmtp/workspace-diesel-wasm-sqlite/main/.direnv"/*.rc
